<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Bloom?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.effect.InnerShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane id="AnchorPane" prefHeight="720.0" prefWidth="480.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1" fx:controller="org.joseaguilar.controller.LoginController">
   <children>
      <ImageView fitHeight="720.0" fitWidth="480.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../image/FondoLoginUsuario.jpg" />
         </image>
      </ImageView>
      <TextField fx:id="tfUser" layoutX="156.0" layoutY="344.0" prefHeight="32.0" prefWidth="176.0" promptText="Usuario" style="-fx-background-radius: 15;">
         <font>
            <Font name="Verdana Bold" size="16.0" />
         </font>
         <effect>
            <DropShadow>
               <input>
                  <InnerShadow />
               </input>
            </DropShadow>
         </effect>
      </TextField>
      <PasswordField fx:id="tfPassword" layoutX="105.0" layoutY="475.0" prefHeight="32.0" prefWidth="277.0" promptText="Contraseña" style="-fx-background-radius: 15;">
         <font>
            <Font name="Verdana Bold" size="16.0" />
         </font>
         <effect>
            <DropShadow>
               <input>
                  <InnerShadow />
               </input>
            </DropShadow>
         </effect>
      </PasswordField>
      <Button fx:id="btnIniciar" layoutX="105.0" layoutY="567.0" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="55.0" prefWidth="130.0" style="-fx-background-color: #161616; -fx-background-radius: 15;" text="Iniciar Sesión" textAlignment="CENTER" textFill="#3281c3" wrapText="true">
         <font>
            <Font name="Elephant" size="16.0" />
         </font>
         <effect>
            <Bloom threshold="0.2">
               <input>
                  <DropShadow>
                     <input>
                        <InnerShadow />
                     </input>
                  </DropShadow>
               </input>
            </Bloom>
         </effect>
      </Button>
      <Button fx:id="btnRegistar" alignment="CENTER" disable="true" layoutX="267.0" layoutY="567.0" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="55.0" prefWidth="130.0" style="-fx-background-color: #161616; -fx-background-radius: 15;" text="Registrar Usuario" textAlignment="CENTER" textFill="#cd3b3b" wrapText="true">
         <font>
            <Font name="Elephant" size="16.0" />
         </font>
         <effect>
            <Bloom threshold="0.2">
               <input>
                  <DropShadow>
                     <input>
                        <InnerShadow />
                     </input>
                  </DropShadow>
               </input>
            </Bloom>
         </effect>
      </Button>
   </children>
</AnchorPane>
